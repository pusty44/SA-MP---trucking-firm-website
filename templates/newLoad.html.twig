{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    {% include 'common/pageHeader.html.twig' %}
    <!-- Start Page Welcome Area -->
    <section class="ptb-130">
        <div class="container">
            <div class="row align-items-center">
                <!-- Start Page Welcome Content -->
                <div class="col-md-6 col-12">
                    <div class="page-welcome-content">
                        <h3 data-animate="fadeInUp" data-delay=".1">HIGHWAYLIFE</h3>
                        <h1 data-animate="fadeInUp" data-delay=".2">Strefa Kierowcy</h1>
                        <p data-animate="fadeInUp" data-delay=".3">Wybierz swój nowy ładunek</p>

                        <!-- End Social Icons -->
                    </div>
                </div>
                <!-- End Page Welcome Content -->

                <!-- Start Contact Form -->
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if error %}
                    <!-- Start Offer Area -->
                    <div class="offer-wrapper text-center" data-animate="fadeInUp" data-delay=".1">
                        <div class="offer-text">
                            <h2  data-animate="fadeInUp" data-delay=".3">Sukces!</h2>
                            <p data-animate="fadeInUp" data-delay=".5" >Ładunek został do Ciebie przypisany i oczekuje na dostawę!</p>
                        </div>
                    </div>
                {% else %}
                    <div class="col-md-6 col-12">
                        <div class="contact-form bg-light">
                            <div class="form-response"></div>
                            <form method="post" action="{{ path('newLoad') }}" class="parsley-validate">
                                <div class="input-wrap">
                                    <label>Wybierz ładunek z listy</label>
                                    {{ form_widget(form.load) }}
                                    <span class="highlight"></span>
                                </div>
                                {{ form_row(form._token) }}
                                <button class="btn" data-animate="fadeInUp" data-delay=".3" type="submit">Dodaj</button>
                            </form>
                        </div>
                    </div>
                    {% endif %}
                {% else %}
                    <div class="offer-wrapper text-center" data-animate="fadeInUp" data-delay=".1">
                        <div class="offer-text">
                            <h2  data-animate="fadeInUp" data-delay=".3">Nie jesteś zalogowany!</h2>
                            <p data-animate="fadeInUp" data-delay=".5" >Aby wybrać nowy ładunek musisz sie zalogować.</p>
                        </div>
                    </div>

                {% endif %}
                <!-- End Contact Form -->
            </div>
        </div>
    </section>
    <!-- End Page Welcome Area -->
{% endblock %}