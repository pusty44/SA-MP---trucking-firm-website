{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    {% include 'common/pageHeader.html.twig' %}
    <!-- Start Page Welcome Area -->
    <section class="ptb-130">
        <div class="container">
            <div class="row align-items-center">
                <!-- Start Page Welcome Content -->
                <div class="col-md-6 col-12">
                    <div class="page-welcome-content">
                        <h3 data-animate="fadeInUp" data-delay=".1">HIGHWAYLIFE</h3>
                        <h1 data-animate="fadeInUp" data-delay=".2">Strefa Kierowcy</h1>
                        <p data-animate="fadeInUp" data-delay=".3">Zaloguj się, aby uzyskać dostęp do zapisu tachografu, przejechanych tras i zarobków.</p>

                        <!-- End Social Icons -->
                    </div>
                </div>
                <!-- End Page Welcome Content -->

                <!-- Start Contact Form -->
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="offer-wrapper text-center" data-animate="fadeInUp" data-delay=".1">
                        <div class="offer-text">
                            <h2  data-animate="fadeInUp" data-delay=".3">Jesteś już zalogowany!</h2>
                            <p data-animate="fadeInUp" data-delay=".5" >Nie możesz się ponownie zalogować :)</p>
                        </div>
                    </div>
                {% else %}
                <div class="col-md-6 col-12">
                    <div class="contact-form bg-light">
                        <div class="form-response"></div>
                        <form method="post" action="{{ path('login') }}" class="parsley-validate">
                            <div class="input-wrap">
                                <input type="text" name="_username" class="form-control" id="username" placeholder="Login" value="{{ last_username }}" required data-animate="fadeInUp" data-delay=".1">
                                <span class="highlight"></span>
                            </div>
                            <div class="input-wrap">
                                <input type="password" name="_password" class="form-control" id="password" placeholder="Wprowadź hasło" required data-animate="fadeInUp" data-delay=".15">
                                <input type="hidden" name="_target_path" value="/" />
                                <span class="highlight"></span>
                            </div>
                            <button class="btn" data-animate="fadeInUp" data-delay=".3" type="submit">Zaloguj!</button>
                        </form>
                    </div>
                </div>
                {% endif %}
                <!-- End Contact Form -->
            </div>
        </div>
    </section>
    <!-- End Page Welcome Area -->
{% endblock %}